# Kaggle API Credentials
# Get these from https://www.kaggle.com/settings/account
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Gemini API (if using Gemini for LLM features)
GEMINI_API_KEY=your_gemini_api_key

# Model Configuration
MODEL_TYPE=lightgbm  # Options: lightgbm, xgboost, transformer
BATCH_SIZE=32
LEARNING_RATE=0.001
MAX_EPOCHS=100

# System Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
ENABLE_GPU=true
MAX_MEMORY_USAGE=80  # percentage

# Competition Settings
TARGET_PERCENTILE=0.20  # Target top 20%
MAX_ITERATIONS=5

# Docker Configuration
# Ollama LLM Service
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=gpt-oss

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Optional, leave empty for no auth

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=kaggle_agents
POSTGRES_USER=kaggle
POSTGRES_PASSWORD=kaggle_password  # CHANGE IN PRODUCTION!

# Jupyter Configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=  # Leave empty for no token (development only)

# Application Settings
APP_ENV=development  # Options: development, production
APP_PORT=8000
WORKERS=4  # Number of worker processes